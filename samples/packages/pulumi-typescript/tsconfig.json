{
    "compilerOptions": {
      "alwaysStrict": true,
      "charset": "utf8",
      "declaration": true,
      "experimentalDecorators": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "lib": [
        "es2018"
      ],
      "module": "CommonJS",
      "noEmitOnError": true,
      "noFallthroughCasesInSwitch": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noUnusedLocals": false,
      "noUnusedParameters": true,
      "resolveJsonModule": true,
      "strict": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "stripInternal": true,
      "esModuleInterop": true,
      "target": "ES2018",
      "incremental": true,
      "skipLibCheck": true,
      "outDir": "dist",
    },
    "include": [
      "src", "tests"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  